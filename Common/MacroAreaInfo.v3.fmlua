macro Descr="Show context info" Key="CtrlAltF12"
{{
  s = "MacroArea   : "..Area.Current;  s = s .. "\nTitle       : "..Object.Title;  if  Area.Menu or Area.MainMenu or Area.UserMenu or Area.Disks then     s = s .. "\nGUID        : "..(Menu.Id and Menu.Id or "");    s = s .. "\nPos/Count   : "..Object.CurPos.." / "..Object.ItemCount;    s = s .. "\nMenu.Value  : "..Menu.Value;  end  if Area.Dialog then     s = s .. "\nGUID        : "..(Dlg.Id and Dlg.Id or "")    s = s .. "\nItemType    : "..Dlg.ItemType;    s = s .. "\nValue       : "..Dlg.GetValue(-1, 0);    s = s .. "\nControls    : "..Dlg.CurPos.." / "..Dlg.ItemCount;    s = s .. "\nPos/Count   : "..Object.CurPos.." / "..Object.ItemCount;  end  if Area.DialogAutoCompletion then     s = s .. "\nGUID        : "..(Dlg.Id and Dlg.Id or "")    s = s .. "\nItemType    : "..Dlg.ItemType;    s = s .. "\nValue       : "..Dlg.GetValue(-1, 0);    s = s .. "\nControls    : "..Dlg.CurPos.." / "..Dlg.ItemCount;    s = s .. "\nPos/Count   : "..Object.CurPos.." / "..Object.ItemCount;  end  if  Area.Shell then     s = s .. "\nCurrent     : "..APanel.Current;    s = s .. "\nPath        : "..APanel.Path;    if APanel.Plugin then       s = s .. "\n--- Plugin panel ---";      s = s .. "\nPrefix      : "..APanel.Prefix;      if APanel.HostFile then         s = s .. "\nHostFile    : "..APanel.HostFile;      end    end    s = s .. "\n--- Items ---";    s = s .. "\nCurrent     : "..APanel.CurPos;        s = s .. "\nTotal       : "..APanel.ItemCount;    s = s .. "\nSelected    : "..APanel.SelCount;    end  msgbox("Current info",s,8)}}
